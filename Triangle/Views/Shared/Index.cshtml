@model TriangleModel

<h2>Triangle Type Calculator</h2>
<form asp-controller="Triangle" asp-action="CalculateType" method="post">
    <div class="form-group">
        <label for="SideA">Side A:</label>
        <input type="number" class="form-control" name="SideA" required>
    </div>
    <div class="form-group">
        <label for="SideB">Side B:</label>
        <input type="number" class="form-control" name="SideB" required>
    </div>
    <div class="form-group">
        <label for="SideC">Side C:</label>
        <input type="number" class="form-control" name="SideC" required>
    </div>
    <button type="submit" class="btn btn-primary">Calculate</button>
</form>
